<Window x:Class="UIT_TimeTable.NHAPHOCBU"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIT_TimeTable"
        mc:Ignorable="d"
        Title="Nhập lịch học bù" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Label Content="Nhập lịch nghỉ"
               FontSize="25"/>
        <Label Grid.Row="2" Content="Nhập lịch học bù"
               FontSize="25"/>
        <TextBox Margin="10,0"  Name="tb_NghiHoc" Grid.Row="1" AcceptsReturn="True"/>
        <TextBox Margin="10,0" Name="tb_HocBu" Grid.Row="3" AcceptsReturn="True"/>
        <Button Grid.Row="4" 
                Click="btn_OK" 
                Content="OK" 
                FontSize="20"
                Margin="200,0"/>



    </Grid>
</Window>
